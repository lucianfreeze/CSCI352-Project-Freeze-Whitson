<Window x:Class="Interface_Mockups.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface_Mockups"
        mc:Ignorable="d"
        Title="Financial App" Height="500" Width="500" WindowStartupLocation="CenterScreen" Background="Black">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/financial.png" Opacity="0.75"/>
        </Grid.Background>
        <Grid Margin="160,70,0,0" HorizontalAlignment="Left" Width="158" Height="187" VerticalAlignment="Top">
            <Label Content=" Sign In: " HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Width="158"/>
            <TextBox x:Name="UsernameBox" HorizontalAlignment="Left" Height="23" Margin="0,85,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="158" TextChanged="TextBox_TextChanged"/>
            <TextBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="23" Margin="0,113,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="158" TextChanged="PasswordBox_TextChanged"/>
            <TextBlock HorizontalAlignment="Left" Margin="32,171,0,0" TextWrapping="Wrap" Text="Forgot Password?" VerticalAlignment="Top" Foreground="White" TextDecorations="Underline"/>
            <TextBlock HorizontalAlignment="Left" Margin="58,150,0,0" TextWrapping="Wrap" Text="Sign Up" VerticalAlignment="Top" Foreground="White" TextDecorations="Underline"/>
        </Grid>
        <Button Content="GoTo DB" HorizontalAlignment="Left" Margin="72,390,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="GoTO signup" HorizontalAlignment="Left" Margin="160,390,0,0" VerticalAlignment="Top" Width="83" Click="Button_Click_1"/>


    </Grid>
</Window>
